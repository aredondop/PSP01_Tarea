<?xml version="1.0" encoding="UTF-8"?>
<project name="aleatorios" basedir="." default="compile">

    <property name="src.dir" value="src" />
    <property name="build.dir" value="build" />
    <property name="dist.dir" value="dist" />
    <property name="main-class" value="aleatorios.Aleatorios" />

    <path id="classpath">
        <!-- Agrega aquÃ­ las rutas a las bibliotecas o JARs adicionales si es necesario -->
    </path>

    <target name="compile">
        <mkdir dir="${build.dir}" />
        <javac srcdir="${src.dir}" destdir="${build.dir}" classpathref="classpath" />
    </target>

    <target name="jar" depends="compile">
        <mkdir dir="${dist.dir}" />
        <jar destfile="${dist.dir}/aleatorios.jar" basedir="${build.dir}">
            <manifest>
                <attribute name="Main-Class" value="${main-class}" />
            </manifest>
        </jar>
    </target>

    <target name="clean">
        <delete dir="${build.dir}" />
        <delete dir="${dist.dir}" />
    </target>

</project>
